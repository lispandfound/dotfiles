[user]
	email = jakefaulkn@gmail.com
[init]
	defaultBranch = main
[pull]
	rebase = false
[github]
	user = lispandfound
[push]
	default = current
[core]
	pager = delta
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
	side-by-side = true

    # delta detects terminal colors automatically; set one of these to disable auto-detection
    # dark = true
    # light = true

[merge]
	conflictstyle = diff3
	tool = vimdiff

[diff]
    colorMoved = default
[mergetool]
	prompt = false
